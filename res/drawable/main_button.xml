<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid android:color="@color/normal_bg_gray"></solid>
			<stroke android:width="2dp" android:color="@color/normal_fg" />
			<corners android:radius="6dp"></corners>
			<padding android:left="4dp" android:top="4dp" android:right="4dp"
				android:bottom="4dp" />
		</shape>
	</item>
	<item android:state_enabled="true">
		<shape>
			<solid android:color="@color/normal_bg" />
			<stroke android:width="2dp" android:color="@color/normal_fg" />
			<corners android:radius="6dp" />
			<padding android:left="4dp" android:top="4dp" android:right="4dp"
				android:bottom="4dp" />
		</shape>
	</item>
	<item android:state_enabled="false">
		<shape>
			<solid android:color="@color/normal_bg" />
			<stroke android:width="2dp" android:color="@color/normal_bg_gray" />
			<corners android:radius="6dp" />
			<padding android:left="4dp" android:top="4dp" android:right="4dp"
				android:bottom="4dp" />
		</shape>
	</item>
</selector>
