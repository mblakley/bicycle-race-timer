<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/EditRaceResult"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    style="@style/Padded" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblElapsedTimeDescription"
        style="@style/Medium" />

    <com.gvccracing.android.tttimer.Controls.TimePicker
        android:id="@+id/elapsedTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.gvccracing.android.tttimer.Controls.TimePicker>
    
    <TextView
        android:id="@+id/lblDNF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DNF"
        android:visibility="gone"
        style="@style/ExtraLarge.Padded" />
    
    <Button
		android:id="@+id/btnDNF"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/DNF" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Points"
        style="@style/Medium" />
        
    <EditText
        android:id="@+id/txtPoints"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number" />
        
	<Button
		android:id="@+id/btnSaveResultChanges"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/SaveChanges" />
</LinearLayout>