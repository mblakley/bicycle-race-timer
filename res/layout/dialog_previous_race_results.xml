<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    style="@style/Padded" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race to View"
        style="@style/Medium" />

    <Spinner
        android:id="@+id/spinnerRaceToView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race Info"
        style="@style/Large" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >
	    <TextView
	        android:id="@+id/lblNumberOfRacers"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Number of racers:"
	        style="@style/Medium" />
	    
	    <TextView
	        android:id="@+id/txtNumberOfRacers"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""
	        style="@style/Medium.Padded" />
    </LinearLayout>

    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >
	    <TextView
	        android:id="@+id/lblRaceDistance"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Race distance:"
	        style="@style/Medium" />
	    
	    <TextView
	        android:id="@+id/txtRaceDistance"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""
	        style="@style/Medium.Padded" />
	</LinearLayout>
	
    <Button
        android:id="@+id/btnSaveSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select" />

</LinearLayout>