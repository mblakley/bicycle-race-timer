	    <Button android:id="@+id/btnEditRacer2" android:layout_height="wrap_content" android:text="@string/btnChooseRacer" android:layout_width="0dip"
        android:layout_weight="0.3" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llRacer3"
