<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#FFFF"
    style="@style/Padded" >

    <TextView android:layout_height="wrap_content" 
        android:id="@+id/lblTeamName" 
        android:layout_width="wrap_content" 
        android:text="@string/TeamName"
	    style="@style/Medium" />
    <EditText android:layout_height="wrap_content" android:id="@+id/txtTeamName" android:layout_gravity="fill_vertical" android:layout_width="fill_parent" android:text="" android:inputType="textCapWords"></EditText>
	
    <TextView
        android:id="@+id/lblChooseRacers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ChooseRacers"
	    style="@style/Medium" />
    
    <LinearLayout
        android:id="@+id/llRacer1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="1.0" >
	    <TextView
	        android:id="@+id/lblRacer1"
        	android:layout_weight="0.2"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:text="@string/Racer1"
		    style="@style/Medium" />
	    <TextView
	        android:id="@+id/lblRacer1Name"
        	android:layout_weight="0.5"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:singleLine="true"
		    style="@style/Medium.Padded" />
	    <Button android:id="@+id/btnEditRacer1" android:layout_height="wrap_content" android:text="@string/btnChooseRacer" android:layout_width="0dip"
        android:layout_weight="0.3" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llRacer2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
