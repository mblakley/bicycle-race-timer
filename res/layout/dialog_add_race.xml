<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#FFFF"
    style="@style/Padded" >

    <TextView
        android:id="@+id/lblRaceDate"
        style="@style/Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Date" />

    <DatePicker
        android:id="@+id/dateRaceDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/lblRaceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RaceTypeLabel"
        	style="@style/Medium" />

        <Spinner
            android:id="@+id/spinnerRaceType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/lblCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RaceLocation"
        	style="@style/Medium" />

        <Spinner
            android:id="@+id/spinnerRaceLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llStartInterval"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/lblStartInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/StartInterval"
        	style="@style/Medium" />

        <Spinner
            android:id="@+id/spinnerStartInterval"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:weightSum="1" 
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/lblTime"
            style="@style/Medium"
            android:layout_width="0dip"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:text="@string/NumberOfMinutes" />

        <EditText
            android:id="@+id/txtTime"
            style="@style/Medium.Padded"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="number" />

        <TextView
            android:id="@+id/lblTimeUnit"
            style="@style/Small"
            android:layout_width="0dip"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:text="@string/TimeUnit" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llLaps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/lblLaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NumberOfLaps"
        	style="@style/Medium" />

        <EditText 
            android:layout_height="wrap_content" 
	        android:id="@+id/txtNumLaps" 
	        android:layout_width="fill_parent" 
	        style="@style/Medium.Padded" 
	        android:inputType="number" />

    </LinearLayout>
    
    <Button
        android:id="@+id/btnAddNewRace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/AddRace"
       	style="@style/Medium" />

</LinearLayout>