<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#FFFF"
    style="@style/Padded" >

    <TextView 
        android:layout_height="wrap_content" 
        android:id="@+id/lblNumGhostSpots" 
        android:layout_width="wrap_content" 
        android:layout_gravity="top" 
        android:text="@string/txtNumGhostSpots"
        style="@style/Medium"/>
    
    <com.xcracetiming.android.tttimer.Controls.NumberPicker
        android:id="@+id/numSpots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.xcracetiming.android.tttimer.Controls.NumberPicker>
    	
    <Button
        android:id="@+id/btnAddGhostRacer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	style="@style/Medium" 
        android:text="@string/AddGhostRacer" />
</LinearLayout>