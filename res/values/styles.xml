<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <drawable name="translucent_background">#aaFFFFFF</drawable>
    <drawable name="selected_background">#0F0F0F</drawable>
    <drawable name="justwhite">#000000</drawable>
    <style name="Padded">
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:paddingTop">0sp</item>
        <item name="android:paddingBottom">10sp</item>
	    <item name="android:background">#FFFF</item>
    </style>
    <style name="CustomTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
    </style>
    <style name="CustomTabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/CustomTabWidgetText</item>
    </style>
    <style name="CustomTabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">   
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/rounded_shape</item>
    </style>
    <style name="btnBack">
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:layout_width">48sp</item>
        <item name="android:layout_height">48sp</item>
    </style>
    <style name="Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Small.Padded">
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
    </style>
    <style name="SmallMedium" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Medium.RightPadded">
        <item name="android:paddingRight">10sp</item>
    </style>
    <style name="Medium.Padded">
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingRight">20sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
    </style>
    <style name="Medium.PaddedTopBottom">
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
    </style>
    <style name="Medium.SmallPadded">
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingRight">20sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginRight">5sp</item>
    </style>
    <style name="Large" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Large.Padded">
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
    </style>
    <style name="ExtraLarge" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="ExtraLarge.Padded">
        <item name="android:paddingLeft">0sp</item>
        <item name="android:paddingRight">0sp</item>
    </style>
    <style name="ExtraLargeToast" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">80sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextAppearanceLarge" parent="@android:attr/textAppearanceLarge">
		<item name="android:textSize">30sp</item>
	</style>
    <style name="TextAppearanceExtraLarge" parent="@android:attr/textAppearanceLarge">
		<item name="android:textSize">60sp</item>
	</style>
</resources>